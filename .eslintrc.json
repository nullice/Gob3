{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "rules": {
    "indent": [
      "warn",
      4
    ],
    "linebreak-style": [
      "warn",
      "unix"
    ],
    "quotes": [
      "warn",
      "double"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-unused-vars": [
      "off"
    ],
    "no-constant-condition": [
      "off"
    ],
    "no-empty": [
      "off"
    ],
    "brace-style": [
      "error",
      "allman",
      {
        "allowSingleLine": true
      }
    ]
  }
}
